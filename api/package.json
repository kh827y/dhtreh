    "axios": "^1.7.9",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "compression": "^1.7.4",
    "csv-parse": "^5.5.6",
    "csv-stringify": "^6.5.0",
    "exceljs": "^4.4.0",
    "firebase-admin": "^12.0.0",
    "handlebars": "^4.7.8",
    "helmet": "^7.2.0",
    "ioredis": "^5.4.1",
    "jose": "^6.1.0",
    "nestjs-throttler-storage-redis": "^0.5.1",
    "nodemailer": "^6.9.14",
    "openapi-to-postmanv2": "^4.24.0",
    "pdfkit": "^0.13.0",
    "pino": "^9.5.0",
    "pino-http": "^10.3.0",
    "prom-client": "^15.1.3",
