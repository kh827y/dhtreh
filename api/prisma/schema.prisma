  @@index([integrationId, createdAt])
}

model CustomerSegment {
  id                String    @id @default(cuid())
  merchantId        String
  name              String
  description       String?
  type              String    @default("DYNAMIC")
  rules             Json
  filters           Json?
  metricsSnapshot   Json?
