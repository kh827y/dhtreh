  "panels": [
    {
      "type": "stat",
      "title": "Stale workers",
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 5 },
      "targets": [{ "expr": "sum(loyalty_worker_stale)", "legendFormat": "stale" }]
    },
    {
      "type": "stat",
      "title": "Running workers",
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 5 },
      "targets": [{ "expr": "sum(loyalty_worker_running)", "legendFormat": "running" }]
    },
    {
      "type": "stat",
      "title": "Lock misses / 10m",
      "gridPos": { "x": 12, "y": 0, "w": 6, "h": 5 },
      "targets": [{ "expr": "sum(increase(loyalty_worker_lock_miss_total[10m]))", "legendFormat": "lock_miss" }]
    },
    {
      "type": "stat",
      "title": "Outbox pending",
      "gridPos": { "x": 18, "y": 0, "w": 6, "h": 5 },
      "targets": [{ "expr": "loyalty_outbox_pending", "legendFormat": "pending" }]
    },
    {
      "type": "timeseries",
      "title": "Worker stale by name",
      "gridPos": { "x": 0, "y": 5, "w": 12, "h": 8 },
      "targets": [{ "expr": "loyalty_worker_stale", "legendFormat": "{{worker}}" }]
    },
    {
      "type": "timeseries",
      "title": "Worker running by name",
      "gridPos": { "x": 12, "y": 5, "w": 12, "h": 8 },
      "targets": [{ "expr": "loyalty_worker_running", "legendFormat": "{{worker}}" }]
    },
    {
      "type": "timeseries",
      "title": "Seconds since last progress",
      "gridPos": { "x": 0, "y": 13, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "time() - loyalty_worker_last_progress_seconds",
          "legendFormat": "{{worker}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Lock misses rate (5m)",
      "gridPos": { "x": 12, "y": 13, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "rate(loyalty_worker_lock_miss_total[5m])",
          "legendFormat": "{{worker}}"
        }
      ]
    },
    {
